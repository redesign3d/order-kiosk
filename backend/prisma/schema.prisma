generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid()) @db.Uuid
  email        String    @unique
  passwordHash String
  role         UserRole  @default(USER)
  createdAt    DateTime  @default(now())
  lastLoginAt  DateTime?
  sessions     Session[]
  auditLogs    AuditLog[]
}

model Session {
  id         String   @id @default(uuid()) @db.Uuid
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String   @db.Uuid
  tokenHash  String   @unique
  csrfToken  String
  createdAt  DateTime @default(now())
  expiresAt  DateTime
  lastUsedAt DateTime @default(now())
}

model AppSettings {
  id                     Int      @id @default(1)
  storeUrl               String
  consumerKeyEncrypted   String
  consumerSecretEncrypted String
  webhookSecretEncrypted String
  includeDrafts          Boolean  @default(false)
  pollingIntervalSeconds Int      @default(15)
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
}

model Order {
  id             Int         @id
  number         String
  status         OrderStatus
  currency       String
  total          Decimal     @db.Decimal(12, 2)
  customerNote   String?
  paymentMethod  String?
  billingName    String?
  billingEmail   String?
  shippingCity   String?
  createdAt      DateTime
  updatedAt      DateTime
  items          OrderItem[]

  @@index([status])
  @@index([updatedAt])
}

model OrderItem {
  id       Int    @id @default(autoincrement())
  order    Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId  Int
  name     String
  sku      String?
  quantity Int
  total    Decimal @db.Decimal(12, 2)
}

model WebhookDelivery {
  id             Int       @id @default(autoincrement())
  topic          String
  wooDeliveryId  String?
  signatureValid Boolean
  receivedAt     DateTime  @default(now())
  processedAt    DateTime?
  status         String
  error          String?

  @@unique([topic, wooDeliveryId])
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId    String?  @db.Uuid
  action    String
  metadata  Json?
  timestamp DateTime @default(now())
}

enum UserRole {
  ADMIN
  USER
}

enum OrderStatus {
  PENDING
  PROCESSING
  COMPLETED
  CANCELLED
  REFUNDED
  DRAFT
}
